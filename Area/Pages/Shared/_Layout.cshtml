<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Area</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Area.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="header" class="css-hda d-flex justify-content-center" style="height: 78px; z-index: 3; background-color: white;">
        <nav class="navbar w-100 d-flex flex-row justify-content-between align-items-center navbar-light" style="max-width: 1580px;">
            <a href="#" class="fs-3 text-decoration-none text-black fw-bolder" style="font-family: DM Sans, sans-serif">Area</a>
            <div id="js-mnlk" class="css-mnlk w-25 mt-2 fixed-top start-50 translate-middle-x justify-content-center rounded-5">
                <a href="#benefits" class="p-3 text-decoration-none fw-semibold text-black" style="font-size: 15px;">Benefits</a>
                <a href="#specs" class="p-3 text-decoration-none fw-semibold text-black" style="font-size: 15px;">Specifications</a>
                <a href="#howTo" class="p-3 text-decoration-none fw-semibold text-black" style="font-size: 15px;">How-to</a>
                <a href="https://www.workana.com/freelancer/01946d384aea22d61a0c83543fda1a8c" class="p-3 text-decoration-none fw-semibold text-black" style="font-size: 15px;">Contact Us</a>
            </div>
            <a href="https://www.workana.com/freelancer/01946d384aea22d61a0c83543fda1a8c" id="js-adp1" class="css-nvdp text-center text-decoration-none text-white align-content-center rounded-5">
                Learn More
                <svg xmlns="http://www.w3.org/2000/svg" width="11" height="13" fill="currentColor" class="bi bi-arrow-up-right p-0 m-0 mb-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0z" />
                </svg>
            </a>
            <button id="js-adp2" class="btn navbar-toggler-icon fs-2 z-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop" aria-controls="offcanvasTop"></button>
            <button id="js-adp3" class="btn-close fs-3 z-2" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasTop" aria-label="Close" style="display: none;"></button>
        </nav>
    </header>
    <div class="offcanvas offcanvas-top" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasTop" aria-labelledby="offcanvasTopLabel">
        <div id="js-offbdy" class="offcanvas-body">
            <div class="d-flex flex-column mb-5">
                <a href="#benefits" class="p-4 ps-0 text-decoration-none border-top border-bottom fw-semibold text-black text-start" style="font-size: 15px;">Benefits</a>
                <a href="#specs" class="p-4 ps-0 text-decoration-none border-top border-bottom fw-semibold text-black text-start" style="font-size: 15px;">Specifications</a>
                <a href="#howTo" class="p-4 ps-0 text-decoration-none border-top border-bottom fw-semibold text-black text-start" style="font-size: 15px;">How-to</a>
                <a href="https://www.workana.com/freelancer/01946d384aea22d61a0c83543fda1a8c" class="p-4 ps-0 text-decoration-none border-top border-bottom fw-semibold text-black text-start" style="font-size: 15px;">Contact Us</a>
            </div>
            <div>
                <a id="" class="css-nvdp text-center text-decoration-none text-white align-content-center rounded-5">
                    Learn More
                    <svg xmlns="http://www.w3.org/2000/svg" width="11" height="13" fill="currentColor" class="bi bi-arrow-up-right p-0 m-0 mb-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0z" />
                    </svg>
                </a>
            </div>

        </div>
    </div>


    <div class="main-cont">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script>

    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
